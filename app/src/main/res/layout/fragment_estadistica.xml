<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ======= ENCABEZADO ======= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/bg_encabezado"
            android:padding="16dp">

            <!-- Textos a la izquierda -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvWelcomeEstadistica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="BIENVENIDO,"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvSubtitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Gráfico de rendimiento\ntiempo real"
                    android:textColor="#FFEAEA"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Imagen decorativa o logo -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="-10dp"
                android:contentDescription="Logo"
                android:src="@drawable/logo_bienvenida" />
        </LinearLayout>

        <!-- ======= TÍTULO GRÁFICO DE BARRAS ======= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_barras"
                app:tint="#D50000"
                android:contentDescription="Icono gráfico de barras" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Gráfico de Barras"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- ======= GRÁFICO DE BARRAS ======= -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="24dp" />

        <!-- ======= TÍTULO GRÁFICO DE PASTEL ======= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_pastel"
                app:tint="#D50000"  
                android:contentDescription="Icono gráfico de pastel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Gráfico de Pastel"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- ======= GRÁFICO DE PASTEL ======= -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="24dp" />

    </LinearLayout>
</ScrollView>
