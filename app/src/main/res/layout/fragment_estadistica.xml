<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <!-- ======= ENCABEZADO ======= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_encabezado"
        android:padding="16dp">

        <!-- Textos a la izquierda -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWelcomeEstadistica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="BIENVENIDO,"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvSubtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Gráfico de rendimiento\ntiempo real"
                android:textColor="#FFEAEA"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Imagen decorativa o logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="-10dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo_bienvenida" />
    </LinearLayout>

    <!-- ======= GRÁFICO DE BARRAS ======= -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="24dp" />

</LinearLayout>
